<div class="container">
	<div class="span-3"><%=@u.student_id%></div>
	<div class="span-5"><%=@u.name%> <%if @u.permission == 2%><span style="color: red; font-size: small;">系統管理員</span><%end%><%if @u.permission == 1%><span style="color: red; font-size: small;">工作人員</span><%end%></div>
	<div class="span-3"><%=@u.student_class%></div>
	<div class="span-5"><%=@u.email%></div>
	<div class="span-8 last">
		<p class="clearfix"><a href="#" class="button dark right" style="margin-right: 10px;" onclick="edit_user(<%=@u.id%>); this.blur(); return false;" id="btn-edit-<%=@u.id%>"><span><span>編輯</span></span></a><a href="/users/details/<%=@u.id%>" class="button alt star" style="margin-right: 10px;" onclick="this.blur();" id="btn-detail-<%=@u.id%>"><span><span>詳細記錄</span></span></a><a href="/users/delete/<%=@u.id%>" class="button pink minus" onclick="return confirm('確定要刪除使用者 「<%=@u.name%>」 嗎？')"><span><span>刪除</span></span></a></p>
	</div>
</div>
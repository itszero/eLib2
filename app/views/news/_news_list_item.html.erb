<div class="container">
	<div class="span-3"><%=@n.created_at.strftime("%Y-%m-%d")%></div>
	<div class="span-15"><a href="#" id="btn-content-<%=@n.id%>" class="button no-text down" style="margin-right: 10px;" onclick="return toggle_content(this);"><span><span>&nbsp;</span></span></a><%=@n.title%></div>
	<div class="span-4 last">
		<p class="clearfix"><a href="#" class="button dark right" style="margin-right: 10px;" onclick="edit_news(<%=@n.id%>); this.blur(); return false;" id="btn-edit-<%=@n.id%>"><span><span>編輯</span></span></a><a href="/news/delete/<%=@n.id%>" class="button pink minus" onclick="confirm('確定要刪除新聞 「<%=@n.title%>」 嗎？')"><span><span>刪除</span></span></a></p>
	</div>
</div>
<div class="container" id="content-<%=@n.id%>" style="display: none;">
	<div class="span-3">&nbsp;</div>
	<div class="span-19 last"><%=@n.content.gsub("\n", "<br/>")%></div>
</div>
